<UserControl 
    x:Class="ArcGISRuntime.UWP.Samples.ChangeFeatureLayerRenderer.ChangeFeatureLayerRenderer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:esriUI="using:Esri.ArcGISRuntime.UI.Controls" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <CommandBar Grid.Row="0">
            <AppBarButton Content="Reset" Click="OnResetButtonClicked"/>
            <AppBarButton Content="Override" Click="OnOverrideButtonClicked"/>
        </CommandBar>
        <esriUI:MapView x:Name="MyMapView" Grid.Row="1"/>
    </Grid>
</UserControl>

